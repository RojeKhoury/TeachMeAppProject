<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditTeacherInfo"
    android:id="@+id/EditTeacherInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_marginTop="24dp"
            android:textSize="24dp"
            android:fontFamily="@font/montserrat_bold"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Your Personal Info"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat_medium"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <Button
                android:id="@+id/edit_teacher_info_button_name"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="Edit Name"
                android:background="@drawable/buttonshapecool"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_medium"

                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_editBio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/edit_teacher_info_button_Bio"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="Edit Bio"
                android:background="@drawable/buttonshapecool"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_medium"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/edit_teacher_info_button_Phone"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="Change Phone Num"
                android:background="@drawable/buttonshapecool"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_medium"
                />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/edit_teacher_info_button_picture"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:text="Change Picture"
            android:background="@drawable/buttonshapecool"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_medium"
            />
    </LinearLayout>
    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/edit_teacher_info_edit_location"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="Change location"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_medium"
                android:background="@drawable/buttonshapecool"
                android:textColor="@color/white" />
    </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
