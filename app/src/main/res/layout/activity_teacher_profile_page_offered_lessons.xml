<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadingEdge="horizontal"
    android:orientation="vertical"
    tools:context=".TeacherProfilePageOfferedLessons">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_line_bottom_black"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="@dimen/StandardPadding">


            <TextView
                android:id="@+id/textView_Subject_ProfilePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_bold"

                android:text="Subject"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_Price_ProfilePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Price"
                android:textColor="#909090"
                app:layout_constraintBottom_toBottomOf="@+id/textViewElementary"
                app:layout_constraintEnd_toStartOf="@+id/request_btn"
                app:layout_constraintTop_toTopOf="@+id/textViewElementary" />

            <TextView
                android:id="@+id/textViewElementary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/montserrat_medium"

                android:text="Level"
                android:textColor="#909090"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView_Subject_ProfilePage"
                app:layout_constraintTop_toBottomOf="@+id/textView_Subject_ProfilePage" />

            <Button
                android:id="@+id/request_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@color/colorPrimaryDark"
                android:drawableLeft="@drawable/ic_add"
                android:drawablePadding="5dp"
                android:fontFamily="@font/montserrat_medium"
                android:padding="10dp"
                android:text="Get Lesson"
                android:textAllCaps="false"

                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="@+id/textViewElementary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView_Subject_ProfilePage" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>